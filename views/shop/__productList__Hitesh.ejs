<head>
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
    crossorigin="anonymous"
  />
</head>
<% if (prods.length > 0) { %>

<div class="grid" style="align-self: center">
  <% for (let product of prods) { %>
  <div class="card" style="margin-bottom: 2rem; max-width: 40rem">
    <h5 class="card-header">Product Name : <%= product.title %></h5>
    <div class="card-body">
      <img src="<%= product.imageUrl %>" alt="<%= product.title %>" />
    </div>
    <div class="card-footer" style="font-weight: bolder">
      Price : â‚¬<%= product.price %>
    </div>
  </div>
  <% } %>
</div>
<% } else { %>
<h3>Oh Snap! No Products Found!</h3>
<% } %>
